<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:lineSpacingExtra="8sp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Укажите дату своего рождения. Это нужно для составленных твоих особых гороскопов."
        android:textAlignment="center"
        android:textColor="@color/base"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif-light"
        app:layout_constraintBottom_toTopOf="@+id/datePicker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/userDataBlock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/dateTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дата рождения"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ageTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Возраст"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/zodiacTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Знак зодиака"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/nameYearTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Год животного"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/namePlanetTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Планета"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/nameElementTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Элемент"
            android:textSize="20sp" />
    </LinearLayout>

    <DatePicker
        android:id="@+id/datePicker"
        style="@style/DatePicker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:dayOfWeekTextAppearance="@style/TextAppearance.AppCompat.Large"
        android:headerBackground="@color/blue"
        android:headerDayOfMonthTextAppearance="@style/TextAppearance.AppCompat.Large"
        android:headerMonthTextAppearance="@style/TextAppearance.AppCompat.Large"
        android:headerYearTextAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#0066cc"
        android:clickable="true"
        app:borderWidth="0dp"
        app:fabSize="auto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="25dp"
        app:rippleColor="@color/base"
        app:srcCompat="@drawable/ic_navigate_next_50dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="147dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#0066cc"
        android:text="Далее"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datePicker"
        app:rippleColor="@color/base" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:text="пропустить"
        android:textColor="#32070707"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fabNext" />

</androidx.constraintlayout.widget.ConstraintLayout>